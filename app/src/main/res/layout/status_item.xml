<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dynamics_list_layout"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardMaxElevation="6dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:background="?attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:transitionName="status_img_card_to_detail"
                android:id="@+id/img_status_card"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_msg_status_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:transitionName="status_avatar_card_to_detail"
                android:id="@+id/status_list_avater"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_username_status_card"
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="username"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_thumb_up_black_24dp"/>
            <TextView
                android:id="@+id/ststus_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_gravity="center_vertical"
                android:text="12"/>
            <ImageView
                android:id="@+id/num_dynamics_like"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chat_black_24dp"/>
            <TextView
                android:id="@+id/ststus_conmment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"
                android:layout_gravity="center_vertical"
                android:text="24"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>