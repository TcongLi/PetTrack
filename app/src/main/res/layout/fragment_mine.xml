<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.bigc.pettrack.fragment.MineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#BDBDBD"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="8dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:transitionName="homepage"
                android:id="@+id/img_my_avater"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_my_homepage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我的主页"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:padding="0sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="16dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_my_activity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_activity"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_margin="16dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_my_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的活动"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:padding="0sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="0dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_my_followee"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mine"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_margin="16dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_my_followee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:padding="0sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="0dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_my_follower"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dynamics"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_margin="16dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_my_follower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的粉丝"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:padding="0sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="0dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_find_user"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_black_24dp"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_margin="16dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_find_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查找用户"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:padding="0sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="16dp"
            >

            <!--de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_logout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mine"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_margin="16dp"
                android:layout_gravity="center"/-->

            <Button

                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登陆"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="16sp"
                android:padding="0sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

        </LinearLayout>



    </LinearLayout>
</FrameLayout>
